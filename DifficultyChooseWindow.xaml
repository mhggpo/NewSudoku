<Window x:Class="NewSudoku.DifficultyChooseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewSudoku"
        mc:Ignorable="d"
        Title="Choose Difficulty" Height="180" Width="600" ResizeMode="NoResize" Closed="DifClosed" Closing="DifClosing">
    <Grid>
        <Label Content="选择游戏难度" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button x:Name="EasyButton" Content="简单" HorizontalAlignment="Center" Margin="-300,50,0,0" VerticalAlignment="Top" Width="100" Height="50" Click="EasyButton_Click"/>
        <Button x:Name="HardButton" Content="中等" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="100" Height="50" Click="HardButton_Click"/>
        <Button x:Name="VeryHardButton" Content="困难" HorizontalAlignment="Center" Margin="300,50,0,0" VerticalAlignment="Top" Width="100" Height="50" Click="VeryHardButton_Click"/>
        <Label Content="注意：难度越高计算机生成数独板的时间越久" HorizontalAlignment="Left" Margin="47,117,0,0" VerticalAlignment="Top" Width="510"/>
    </Grid>
</Window>
